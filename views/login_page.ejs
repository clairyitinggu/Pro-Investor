  </head>
  <body>
      <div
      class="view full-page-intro"
      style="background-image: url('https://mdbootstrap.com/img/Photos/Others/images/78.jpg'); background-repeat: no-repeat; background-size: cover;"
    >
    <center>
      <div class="col-md-6 col-xl-5 mb-4">
        <div class="card">
          <div class="card-body">
            <form action="/login" method="post">
              <!-- <div class="imgcontainer">
        <img src="img_avatar2.png" alt="Avatar" class="avatar" />
      </div> -->
              <h3 class="dark-grey-text text-center">
                <strong>LOGIN</strong>
              </h3>

              <div class="md-form" style="text-align: left">
                <i class="fas fa-user prefix grey-text"></i>
                <input
                  type="text"
                  id="form3"
                  class="form-control"
                  name="username"
                />
                <!-- <input type="email" id="form3" class="form-control" name="email" required/> -->
                <label for="username" class="active"><b>Username/Email</b></label>
              </div>

              <!-- <input
                type="text"
                placeholder="Enter Username/Email"
                name="username"
                required
              /> -->

              <!-- password -->
              <div class="md-form" style="text-align: left">
                <i class="fas fa-unlock prefix grey-text"></i>

                <input
                  type="password"
                  id="form2"
                  class="form-control"
                  
                  name="password"
                  required
                />
                <label for="password" class="active">Password</label>
              </div>

              <!-- login -->
              <div style="text-align: center">
                <button type="submit" class="btn btn-indigo">Login</button>
              </div>
              <div class="container" style="text-align: right;">
                <span class="signup"
                  >
                  <div class="text-center">
                  Don't Have An Account?
                  <a href="/display_main_page">Create One</a>
                  </div>
                  </span
                >
              </div>
            </form>
          </div>
        </div>
      </div>
    </center>
      </div>
    <script src="" async defer></script>
  </body>
